---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AnimatedTerminal from '../components/AnimatedTerminal';
import VelvetSilkBackground from '../components/VelvetSilkBackground';
import SunBackground from '../components/SunBackground';
import { baseUrl } from '../lib/utils';

// Fetch GitHub token for API calls
const isDev = import.meta.env.DEV;
let GITHUB_TOKEN = import.meta.env.GITHUB_TOKEN || (typeof process !== 'undefined' && process.env ? process.env.GITHUB_TOKEN : undefined);
if (GITHUB_TOKEN) {
  let cleaned = GITHUB_TOKEN.toString();
  if ((cleaned.startsWith('"') && cleaned.endsWith('"')) || 
      (cleaned.startsWith("'") && cleaned.endsWith("'"))) {
    cleaned = cleaned.slice(1, -1);
  }
  cleaned = cleaned.replace(/^\s+|\s+$/g, '').replace(/[\r\n\t\s]/g, '');
  GITHUB_TOKEN = cleaned;
}

function getFetchHeaders() {
  const headers: HeadersInit = {
    'Accept': 'application/vnd.github.v3+json',
  };
  if (GITHUB_TOKEN) {
    headers['Authorization'] = `Bearer ${GITHUB_TOKEN.trim()}`;
  }
  return headers;
}

// Fetch open PRs count using GitHub search API
let openPRsCount: number | null = null;
try {
  const prResponse = await fetch('https://api.github.com/search/issues?q=repo:ipython/ipython+type:pr+state:open', {
    headers: getFetchHeaders(),
  });
  if (prResponse.ok) {
    const prData = await prResponse.json();
    openPRsCount = prData.total_count || 0;
  }
} catch (error) {
  console.error('Failed to fetch PR count:', error);
}

// Fetch latest PyPI release
let pypiVersion: string | null = null;
let pypiReleaseDate: string | null = null;
try {
  const pypiResponse = await fetch('https://pypi.org/pypi/ipython/json');
  if (pypiResponse.ok) {
    const pypiData = await pypiResponse.json();
    pypiVersion = pypiData.info.version;
    // Get the release date from the latest release
    const releases = pypiData.releases[pypiVersion];
    if (releases && releases.length > 0) {
      const latestRelease = releases[releases.length - 1];
      if (latestRelease.upload_time) {
        const releaseDate = new Date(latestRelease.upload_time);
        pypiReleaseDate = releaseDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
      }
    }
  }
} catch (error) {
  console.error('Failed to fetch PyPI data:', error);
}
