---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import AnimatedTerminal from '../components/AnimatedTerminal';
import VelvetSilkBackground from '../components/VelvetSilkBackground';
import SunBackground from '../components/SunBackground';
import GitHubPRCount from '../components/GitHubPRCount';
import PyPIRelease from '../components/PyPIRelease';
import { baseUrl } from '../lib/utils';
import fs from 'fs';
import path from 'path';

// Fetch GitHub token for API calls
const isDev = import.meta.env.DEV;
let GITHUB_TOKEN = import.meta.env.GITHUB_TOKEN || (typeof process !== 'undefined' && process.env ? process.env.GITHUB_TOKEN : undefined);
if (GITHUB_TOKEN) {
  let cleaned = GITHUB_TOKEN.toString();
  if ((cleaned.startsWith('"') && cleaned.endsWith('"')) || 
      (cleaned.startsWith("'") && cleaned.endsWith("'"))) {
    cleaned = cleaned.slice(1, -1);
  }
  cleaned = cleaned.replace(/^\s+|\s+$/g, '').replace(/[\r\n\t\s]/g, '');
  GITHUB_TOKEN = cleaned;
}

function getFetchHeaders() {
  const headers: HeadersInit = {
    'Accept': 'application/vnd.github.v3+json',
  };
  if (GITHUB_TOKEN) {
    headers['Authorization'] = `Bearer ${GITHUB_TOKEN.trim()}`;
  }
  return headers;
}

// Check GitHub API rate limits at build start
async function checkRateLimit() {
  try {
    const response = await fetch('https://api.github.com/rate_limit', {
      headers: getFetchHeaders(),
    });
    if (response.ok) {
      const data = await response.json();
      const core = data.resources?.core || {};
      const remaining = core.remaining ?? 0;
      const limit = core.limit ?? 0;
      const resetTime = core.reset ? new Date(core.reset * 1000).toLocaleString() : 'unknown';
      console.log(`[GitHub API] Rate limit: ${remaining}/${limit} requests remaining (resets at ${resetTime})`);
      if (remaining === 0) {
        console.error('[GitHub API] ‚ö† WARNING: No API requests remaining! Build may fail.');
      }
      return { remaining, limit, resetTime };
    } else {
      const errorText = await response.text();
      console.error(`[GitHub API] ‚úó Failed to check rate limit: ${response.status} ${response.statusText}`);
      console.error(`[GitHub API] Response: ${errorText}`);
    }
  } catch (error) {
    console.error('[GitHub API] ‚úó Error checking rate limit:', error);
  }
  return null;
}

// Check rate limits at build start
await checkRateLimit();

// Fetch open PRs count using GitHub search API
let openPRsCount: number | null = null;
if (isDev) {
  console.log('[GitHub API] üîÑ Fetching live PR count from GitHub API...');
}
try {
  const prResponse = await fetch('https://api.github.com/search/issues?q=repo:ipython/ipython+type:pr+state:open', {
    headers: getFetchHeaders(),
  });
  
  if (prResponse.ok) {
    const prData = await prResponse.json();
    openPRsCount = prData.total_count ?? null;
    
    if (openPRsCount === null || openPRsCount === undefined) {
      const errorMsg = '[GitHub API] ‚úó PR count response is empty or invalid';
      console.error(errorMsg);
      console.error('[GitHub API] Response data:', JSON.stringify(prData, null, 2));
      if (!isDev) {
        throw new Error(errorMsg);
      }
    } else {
      if (isDev) {
        console.log(`[GitHub API] ‚úì Live data: ${openPRsCount} open PRs`);
      } else {
        console.log(`[Static Data] üì¶ Using static PR count from last build: ${openPRsCount}`);
      }
    }
  } else {
    const errorText = await prResponse.text();
    const errorMsg = `[GitHub API] ‚úó Failed to fetch PR count: ${prResponse.status} ${prResponse.statusText}`;
    console.error(errorMsg);
    console.error('[GitHub API] Response:', errorText);
    if (!isDev) {
      throw new Error(errorMsg);
    }
  }
} catch (error) {
  const errorMsg = '[GitHub API] ‚úó Failed to fetch PR count';
  console.error(errorMsg, error);
  if (error instanceof Error) {
    console.error('[GitHub API] Error details:', error.message);
    console.error('[GitHub API] Stack:', error.stack);
  }
  if (!isDev) {
    throw error;
  }
}

// Fetch latest PyPI release
let pypiVersion: string | null = null;
let pypiReleaseDate: string | null = null;
if (isDev) {
  console.log('[PyPI API] üîÑ Fetching live version from PyPI API...');
}
try {
  const pypiResponse = await fetch('https://pypi.org/pypi/ipython/json');
  if (pypiResponse.ok) {
    const pypiData = await pypiResponse.json();
    pypiVersion = pypiData.info?.version ?? null;
    
    if (!pypiVersion) {
      const errorMsg = '[PyPI API] ‚úó PyPI version response is empty or invalid';
      console.error(errorMsg);
      console.error('[PyPI API] Response data:', JSON.stringify(pypiData, null, 2));
      if (!isDev) {
        throw new Error(errorMsg);
      }
    } else {
      // Get the release date from the latest release
      const releases = pypiData.releases?.[pypiVersion];
      if (releases && releases.length > 0) {
        const latestRelease = releases[releases.length - 1];
        if (latestRelease.upload_time) {
          const releaseDate = new Date(latestRelease.upload_time);
          pypiReleaseDate = releaseDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
        }
      }
      if (isDev) {
        console.log(`[PyPI API] ‚úì Live data: v${pypiVersion} (${pypiReleaseDate || 'date unknown'})`);
      } else {
        console.log(`[Static Data] üì¶ Using static PyPI version from last build: v${pypiVersion} (${pypiReleaseDate || 'date unknown'})`);
      }
    }
  } else {
    const errorText = await pypiResponse.text();
    const errorMsg = `[PyPI API] ‚úó Failed to fetch PyPI data: ${pypiResponse.status} ${pypiResponse.statusText}`;
    console.error(errorMsg);
    console.error('[PyPI API] Response:', errorText);
    if (!isDev) {
      throw new Error(errorMsg);
    }
  }
} catch (error) {
  const errorMsg = '[PyPI API] ‚úó Failed to fetch PyPI data';
  console.error(errorMsg, error);
  if (error instanceof Error) {
    console.error('[PyPI API] Error details:', error.message);
    console.error('[PyPI API] Stack:', error.stack);
  }
  if (!isDev) {
    throw error;
  }
}

// Save build-time data to static JSON files in /public/
try {
  const publicDir = path.join(process.cwd(), 'public');
  if (!fs.existsSync(publicDir)) {
    fs.mkdirSync(publicDir, { recursive: true });
  }

  // Save PR count
  const prDataFile = path.join(publicDir, 'build-data-pr.json');
  fs.writeFileSync(
    prDataFile,
    JSON.stringify({ count: openPRsCount, timestamp: Date.now() }, null, 2)
  );
  if (isDev) {
    console.log(`[Build Data] ‚úì Saved PR count to ${prDataFile} (${openPRsCount !== null ? openPRsCount : 'null'})`);
  }

  // Save PyPI version
  const pypiDataFile = path.join(publicDir, 'build-data-pypi.json');
  fs.writeFileSync(
    pypiDataFile,
    JSON.stringify(
      { version: pypiVersion, releaseDate: pypiReleaseDate, timestamp: Date.now() },
      null,
      2
    )
  );
  if (isDev) {
    console.log(`[Build Data] ‚úì Saved PyPI data to ${pypiDataFile} (${pypiVersion || 'null'})`);
  }
} catch (error) {
  console.error('[Build Data] ‚úó Failed to save build-time data:', error);
}
